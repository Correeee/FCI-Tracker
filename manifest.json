{
  "manifest_version": 3,
  "name": "FCI Tracker Pro",
  "version": "1.8",
  "description": "Seguimiento de FCI en ARS y USD con notificaciones en tiempo real",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://api.argentinadatos.com/*",
    "https://dolarapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}